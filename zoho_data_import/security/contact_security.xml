<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="module_contacts_category" model="ir.module.category">
            <field name="name">Contacts</field>
            <field name="sequence">18</field>
        </record>

        <record id="contacts_group_salesperson" model="res.groups">
            <field name="name">Salesperson</field>
            <field name="category_id" ref="module_contacts_category"/>
             <field name="users" eval="[(4, ref('base.group_user'))]"/>
<!--            <field name="users"  eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>-->
        </record>

          <record id="contacts_group_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('contacts_group_salesperson'))]"/>
            <field name="category_id" ref="module_contacts_category"/>
            <field name="users"
                   eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="res_partner_admin_rule" model="ir.rule">
            <field name="name">Administrator: full access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('contacts_group_administrator'))]"/>
        </record>

        <record id="res_partner_user_rule" model="ir.rule">
            <field name="name">Salesperson: own document only</field>
            <field name="model_id" ref="base.model_res_partner"/>
           <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('contacts_group_salesperson'))]"/>
        </record>

    </data>
</odoo>