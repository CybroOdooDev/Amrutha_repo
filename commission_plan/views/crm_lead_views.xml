<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit the CRM Lead Form View -->
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Commission-related Buttons -->
            <xpath expr="//header" position="inside">
                <button name="action_commission" string="Commission"
                        type="object"
                        class="btn btn-primary me-1"/>
            </xpath>

            <!-- Add Commission Information on Lead Form -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="referer_id" invisible="not is_calculate_commission"/>
                <field name="co_agent_id" invisible="not is_calculate_commission"/>
                <field name="inside_sale_person_id" invisible="not is_calculate_commission"/>
                <field name="required_approvers" widget="many2many_tags" invisible="not is_calculate_commission"/>
<!--                <field name="won_status" invisible="1"/>-->

            </xpath>

            <xpath expr="//notebook/page[@name='extra']" position="after">
                <field name="is_calculate_commission"/>
                <page string="Commission"
                      invisible="not is_calculate_commission">
                    <field name="currency_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="total_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="total_commission" widget="monetary"/>
                            <field name="omissions_insurance"
                                   widget="monetary"/>
                            <field name="is_apply_transaction_coordinator_fee"/>
                            <field name="inside_sale_fee" widget="monetary"/>
                            <field name="referral_fee" widget="monetary"/>
                            <field name="flat_fee" widget="monetary"/>
                            <field name="commission_to_be_paid"
                                   widget="monetary"/>
                            <!--                            <field name="approval_ids" widget="one2many_list"/>-->
                            <field name="commission_attachment_id"
                                   invisible="1"/>
                        </group>
                        <group>
                            <field name="pdf_report" widget="pdf_viewer"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
