<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Inheriting res.partner form view to add custom fields -->
    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.view.form.inherit.theme.blast</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']"
                   position="after">
                <page string="Zoho Informations">
                    <sheet>
                        <group>
                            <group>
                                <field name="zoho_record_id"/>
                                <field name="contact_owner_id"/>
                                <field name="title"/>
                                <field name="home_phone"/>
                                <field name="other_phone"/>
                                <field name="birth_date"/>
                                <field name="assistant"/>
                            </group>
                             <group>
                                <field name="mailing_street"/>
                                <field name="other_street"/>
                                <field name="mailing_city"/>
                                <field name="other_city"/>
                                <field name="mailing_state"/>
                                <field name="other_state"/>
                                <field name="mailing_zip"/>
                                <field name="other_zip"/>
                                <field name="mailing_country"/>
                                <field name="other_country"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="salutation"/>
                                <field name="secondary_email"/>
                                <field name="tag"/>
                                <field name="residence_zip"/>
                                <field name="notes"/>
                                <field name="subject"/>
                                <field name="business_type"/>
                                <field name="bussiness_state"/>
                                <field name="bussiness_street_address"/>
                                <field name="fien_number"/>
                            </group>
                            <group>
                                <field name="time_in_business"/>
                                <field name="industry_experience"/>
                                <field name="annual_revanue"/>
                                <field name="employee_count"/>
                                <field name="owner_legal_name"/>
                                <field name="social_security_number"/>
                                <field name="residence_address"/>
                                <field name="residance_state"/>
                                <field name="residance_city"/>
                                <field name="business_zip"/>
                            </group>
                            <group>
                                <field name="equipment_description"/>
                                <field name="equipment_cost"/>
                                <field name="equipment_dealer"/>
                                <field name="equipment_dealer_contact"/>
                                <field name="equipment_dealer_phone"/>
                                <field name="preferred_name"/>
                                <field name="industry"/>
                            </group>
                        </group>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
</odoo>