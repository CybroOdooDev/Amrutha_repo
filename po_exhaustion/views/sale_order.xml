<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_po" model="ir.ui.view">
        <field name="name">sale.order.form.customer.po</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="customer_po" string="Customer PO"/>
<!--                <field name="total_invoiced_amount" invisible="1"/>-->
                <field name="total_invoiced_amount"/>
             </xpath>
        </field>
    </record>
</odoo>