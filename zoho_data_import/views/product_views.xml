<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Product form page inherited to add the custom fields-->
    <record id="product_template_only_form_inherit_zoho_data_import" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.zoho.data.import</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']" position="after">
                <page string="Zoho Information" name="zoho_Information">
                    <group>
                        <group>
                            <field name="zoho_reference"/>
                            <field name="roof_color"/>
                            <field name="roof_gauge"/>
                            <field name="brand"/>
                            <field name="length"/>
                            <field name="width"/>
                            <field name="eve_height"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>